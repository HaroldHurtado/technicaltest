<%= form_for(api_key) do |f| %>
  <% if api_key.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(api_key.errors.count, "error") %> prohibited this api_key from being saved:</h2>

      <ul>
      <% api_key.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group col-md-12">
    <%= f.label :email, class: "control-label col-md-2"  %>
    <div class="col-md-8">
        <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group col-md-12">
    <div class="actions">
      <%= link_to api_keys_path, class: "btn btn-default" do %>
        <i class="fa fa-reply"></i> <%= t(:back) %>
      <% end %>
      <%= f.button :submit, class: "btn btn-primary" do %>
        <i class="fa fa-save"></i> <%= t(:save) %>
      <% end %>
    </div>
  </div>
<% end %>
