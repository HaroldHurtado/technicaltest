<h1>Api Keys</h1>

<div class="ibox-title">
    <% if user_signed_in? %>
        <%= link_to 'New', new_api_key_path ,:class => "btn btn-primary pull-right"%>
    <% end %>
</div>

<div class="ibox-content">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>Key</th>
          <th>Total use</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @api_keys.each do |api_key| %>
          <tr>
            <td><%= api_key.email %></td>
            <td><%= api_key.key %></td>
            <td><%= api_key.total_use %></td>
            <% if user_signed_in? %>
                <td><%= link_to 'Destroy', api_key, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
