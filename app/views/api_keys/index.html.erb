<h1>Api Keys</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Key</th>
      <th>Total use</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_keys.each do |api_key| %>
      <tr>
        <td><%= api_key.email %></td>
        <td><%= api_key.key %></td>
        <td><%= api_key.total_use %></td>
        <% if user_signed_in? %>
            <td><%= link_to 'Destroy', api_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
    <%= link_to 'New Api Key', new_api_key_path %>
<% end %>
